#!/usr/bin/env bash

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3


echo "BUILD_DIR: " $BUILD_DIR
echo "CACHE_DIR: " $CACHE_DIR
echo "ENV_DIR: " $ENV_DIR


APP_SUBFOLDER=$(cat ${pwd}/APP_SUBFOLDER)

if [[ -z "${APP_SUBFOLDER}" ]]; then
    echo "APP_SUBFOLDER was not set. Aborting" | indent
    exit 1
fi

echo "APP_SUBFOLDER: " $APP_SUBFOLDER
echo "pwd: " $pwd

#move all contents of subfolder to env root
mv  -v ${APP_SUBFOLDER}/* "${pwd}/"

echo "Copied all files successfully" | indent
